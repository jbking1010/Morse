<?xml version="1.0" encoding="utf-8"?>
<!-- Hier wird das Constraint Layout erstellt -->
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- Hier wird der Knopf für das Übersetzen zu Morse erstellt -->
    <Button
        android:id="@+id/btnToMorse"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="168dp"
        android:text="@string/TextToMorse"
        android:textSize="18sp"
        android:onClick="loadToMorse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- Hier wird der Knopf für das Übersetzen zu Text erstellt -->
    <Button
        android:id="@+id/btnToText"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="240dp"
        android:text="@string/MorseToText"
        android:textSize="18sp"
        android:onClick="loadToText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnToMorse" />
</android.support.constraint.ConstraintLayout>